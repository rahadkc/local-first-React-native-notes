{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": []
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf",
    "ignore": []
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "all": false,
      "recommended": true,
      "style": {
        "noUnusedTemplateLiteral": "error",
        "noNonNullAssertion": "warn"
      },
      "nursery": {},
      "correctness": {
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "warn"
      },
      "suspicious": {
        "noConsoleLog": "warn"
      },
      "performance": {
        "noAccumulatingSpread": "info"
      },
      "security": {},
      "a11y": {
        "useHeadingContent": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 90,
      "lineEnding": "lf"
    }
  }
}
